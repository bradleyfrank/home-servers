highlight colorcolumn     ctermbg=231
highlight Search          ctermbg=DarkBlue  ctermfg=231
highlight! link SignColumn LineNr

syntax on
nnoremap <silent> <Space> :nohlsearch<Bar>:echo<CR>

set autoindent
set background=light
set backspace=indent,eol,start
set colorcolumn=100
set cursorline
set expandtab
set hlsearch
set incsearch
set laststatus=2
set linebreak
set noerrorbells
set novisualbell
set number
set scrolloff=4
set shiftwidth=2
set showmatch
set smarttab
set softtabstop=2
set tabstop=2
set term=screen-256color
set ttimeoutlen=10
set updatetime=100
